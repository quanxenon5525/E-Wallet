<title>Trade History</title>
<style>
 body {
    background-color: #ffffff;
    display: grid;
    place-items: center;
    width: 100vw;
    height: 100vh;
    font-family: "Encode Sans SC", sans-serif;
    } 
    span.media.align-items-center {
    width: 158px;
    color: yellow;
    margin-bottom: 19px;
    /* margin-right: 47px; */
    }
    .backBtn{
        margin-bottom: 50px;
        padding-right: 90%;
    }
    .backCredit{
        color: rgb(80, 73, 73); 
        text-decoration: none;
    }
    .backCredit:hover{
        color: rgb(200, 208, 233);
    }
    .backCredit:active{
        font-size: 100%;
    }
</style>


<div class="container-fluid mt-100">
    <div class="backBtn">
        <a href="/" class="backCredit">
            <i class="backCredit fa fa-chevron-left" aria-hidden="true"></i>
        </a>
    </div>
    <h1>Lịch sử giao dịch</h1>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="active-member">
                        <div class="table-responsive">
                            <table class="table table-xs mb-0">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Loại dịch vụ</th>
                                        <th>Giá tiền</th>
                                        <th>Thời gian</th>
                                        <th>Trạng thái</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <% history.forEach((u, index) =>{ %>
                                            <tr>

                                                <td><%= (index + 1) %></td>
    
                                                <td><a href="history-trade/<%= u._id %>" data-id="<%= u._id %>" id="check"><%= u.typetrade %></a></td>
    
                                                <td><%= u.value %></td>
                                                <td> <span class="m-0 pl-3"><%= u.date %></span> </td>
                                                <% if(u.status == 1){ %>
                                                    <td>Thành công</td>
    
                                                <%}else{ %>
                                                    <td>Đang đợi duyệt</td>
    
                                               <% }  %>
    
                                            </tr>
                                      


                                        <% }) %>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
